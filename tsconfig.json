{
    "compilerOptions": {
        "jsx": "preserve",
        "lib": ["dom", "ES2020"],
        "module": "ES2020",
        "moduleResolution": "bundler",
        "paths": {
            "@/*": ["./src/*"],
        },
        "useDefineForClassFields": true,
        "incremental": false,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "isolatedModules": true,
        "noEmit": true,
        "types": ["vite/client"]
    },
    "include": ["./src/**/*"]
}